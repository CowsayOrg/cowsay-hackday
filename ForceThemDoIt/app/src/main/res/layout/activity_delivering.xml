<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context="com.example.hackintosh.forcethemdoit.DeliveringActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delivering"
        android:textSize="25sp"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Delivering"/>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_delivery_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delivering"
        android:layout_marginTop="25dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/receivers_list"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </android.support.design.widget.CoordinatorLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/stopDelivering"
        android:background="@color/buttonColor"
        android:layout_below="@id/main_delivery_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Stop Delivering"/>

</RelativeLayout>
